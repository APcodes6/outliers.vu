    <script>
        // Copy Contract Address Function
        function copyAddress() {
            const address = document.getElementById('contractAddress').innerText;
            navigator.clipboard.writeText(address).then(() => {
                const btn = document.querySelector('.copy-btn');
                btn.classList.add('copied');
                
                setTimeout(() => {
                    btn.classList.remove('copied');
                }, 2000);
            });
        }

        // Click on address also copies
        document.getElementById('contractAddress').addEventListener('click', copyAddress);

        // Custom Cursor
        const cursor = document.querySelector('.cursor');
        const follower = document.querySelector('.cursor-follower');

        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX - 10 + 'px';
            cursor.style.top = e.clientY - 10 + 'px';
            
            setTimeout(() => {
                follower.style.left = e.clientX - 20 + 'px';
                follower.style.top = e.clientY - 20 + 'px';
            }, 100);
        });

        // Energy Orb with Wings Transformation
        let transformed = false;
        const transformContainer = document.querySelector('.transform-container');
        
        transformContainer.addEventListener('click', () => {
            const energyOrb = document.getElementById('energyOrb');
            const wings = document.getElementById('wings');
            
            if (!transformed) {
                transformed = true;
                energyOrb.classList.add('transformed');
                wings.classList.add('active');
                
                // Create explosion effect around the orb
                for (let i = 0; i < 30; i++) {
                    createExplosionParticle();
                }
            } else {
                transformed = false;
                energyOrb.classList.remove('transformed');
                wings.classList.remove('active');
            }
        });

        // Explosion particles for transformation
        function createExplosionParticle() {
            const particle = document.createElement('div');
            particle.style.position = 'absolute';
            particle.style.width = '4px';
            particle.style.height = '4px';
            particle.style.background = `radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(255,0,0,1) 100%)`;
            particle.style.borderRadius = '50%';
            particle.style.left = '250px';
            particle.style.top = '250px';
            particle.style.boxShadow = '0 0 10px rgba(255, 0, 0, 1)';
            particle.style.pointerEvents = 'none';
            particle.style.zIndex = '1000';
            
            const angle = Math.random() * Math.PI * 2;
            const velocity = 150 + Math.random() * 150;
            const vx = Math.cos(angle) * velocity;
            const vy = Math.sin(angle) * velocity;
            
            transformContainer.appendChild(particle);
            
            let opacity = 1;
            let scale = 1;
            const animation = setInterval(() => {
                opacity -= 0.02;
                scale += 0.02;
                particle.style.opacity = opacity;
                particle.style.transform = `scale(${scale})`;
                particle.style.left = parseFloat(particle.style.left) + vx * 0.02 + 'px';
                particle.style.top = parseFloat(particle.style.top) + vy * 0.02 + 'px';
                
                if (opacity <= 0) {
                    clearInterval(animation);
                    particle.remove();
                }
            }, 16);
        }

        // Ambient particles
        function createAmbientParticle() {
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.style.left = Math.random() * window.innerWidth + 'px';
            particle.style.animationDelay = Math.random() * 20 + 's';
            particle.style.animationDuration = (15 + Math.random() * 10) + 's';
            document.body.appendChild(particle);
            
            setTimeout(() => particle.remove(), 25000);
        }

        // Create ambient particles periodically
        setInterval(createAmbientParticle, 3000);

        // Initial particles
        for (let i = 0; i < 3; i++) {
            setTimeout(createAmbientParticle, i * 1000);
        }

        // Add glow effect on hover
        transformContainer.addEventListener('mouseenter', () => {
            if (!transformed) {
                document.getElementById('energyOrb').style.filter = 'drop-shadow(0 0 40px rgba(255, 0, 0, 0.8))';
            } else {
                document.getElementById('wings').style.filter = 'drop-shadow(0 0 60px rgba(255, 0, 0, 0.6))';
            }
        });

        transformContainer.addEventListener('mouseleave', () => {
            document.getElementById('energyOrb').style.filter = '';
            document.getElementById('wings').style.filter = 'drop-shadow(0 20px 40px rgba(255, 0, 0, 0.3))';
        });
    </script>
</body>
</html>
